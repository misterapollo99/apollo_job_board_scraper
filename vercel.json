cat > vercel.json << 'EOF'
{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "buildCommand": "cd client && npm install && npm run build",
  "installCommand": "npm install && cd client && npm install",
  "env": {
    "NODE_ENV": "production"
  }
}
EOF